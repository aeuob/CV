<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Information">

    <TextView
        android:id="@+id/information_text"
        android:layout_width="286dp"
        android:layout_height="542dp"
        android:text='Users can view their own and other items in the home page.\n\n  To list an item, please select "list an item" in the sidebar. \n\n  Users must verify:\n 1. to bid on an item\n 2. send a message\n 3. send feedback\n\n  Please wait a few days after submitting these documents for approval. \n\nEach item is listed for 24h. \n There should be one listing at a time.'
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.625" />
</androidx.constraintlayout.widget.ConstraintLayout>