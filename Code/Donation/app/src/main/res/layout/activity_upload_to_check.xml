<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/upload_text"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadToCheck">

    <TextView
        android:id="@+id/NoRequiredDocuments"
        android:layout_width="249dp"
        android:layout_height="40dp"
        android:clickable="true"
        android:focusableInTouchMode="false"
        android:text="Do not have the required documents?"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.942" />

    <TextView
        android:id="@+id/add_photos_message"
        android:layout_width="233dp"
        android:layout_height="69dp"
        android:clickable="false"
        android:focusableInTouchMode="false"
        android:text="Please upload:"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.089"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.125" />

    <TextView
        android:id="@+id/message_img1"
        android:layout_width="356dp"
        android:layout_height="40dp"
        android:clickable="false"
        android:focusableInTouchMode="false"
        android:text="1. A Bank, Tax or a Wage Statement"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.353" />

    <ImageButton
        android:id="@+id/statement_button"
        style="@android:style/Widget.Holo.ImageButton"
        android:layout_width="70dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.47"
        app:srcCompat="@android:drawable/ic_menu_upload" />

    <TextView
        android:id="@+id/message_img2"
        android:layout_width="319dp"
        android:layout_height="34dp"
        android:clickable="false"
        android:focusableInTouchMode="false"
        android:text="2. Passport or Birth Certificate"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toTopOf="@+id/NoRequiredDocuments"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.293"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.658" />

    <ImageButton
        android:id="@+id/identification_button"
        style="@android:style/Widget.Holo.ImageButton"
        android:layout_width="70dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toTopOf="@+id/NoRequiredDocuments"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/message_img2"
        app:layout_constraintVertical_bias="0.251"
        app:srcCompat="@android:drawable/ic_menu_upload" />

    <Button
        android:id="@+id/upload_button"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload"
        app:layout_constraintBottom_toTopOf="@+id/NoRequiredDocuments"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.966" />

</androidx.constraintlayout.widget.ConstraintLayout>